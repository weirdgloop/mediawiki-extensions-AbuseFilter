<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.PHPUnit.SetMethods.SetMethods" />
		<exclude name="MediaWiki.Usage.DeprecatedConstantUsage.DB_MASTER" />
		<exclude name="MediaWiki.Usage.StaticClosure.StaticClosure" />
		<exclude name="MediaWiki.Usage.SuperGlobalsUsage.SuperGlobals" />
		<exclude name="PSR12.Functions.ReturnTypeDeclaration.SpaceBeforeColon" />
	</rule>
	<rule ref="Generic.Files.LineLength">
		<exclude-pattern>AbuseFilter\.alias\.php</exclude-pattern>
	</rule>
	<rule ref="MediaWiki.NamingConventions.LowerCamelFunctionsName.FunctionName">
		<!-- Many hooks have a dash in their name -->
		<exclude-pattern>*includes/Hooks</exclude-pattern>
	</rule>
	<file>.</file>
	<arg name="extensions" value="php"/>
	<arg name="encoding" value="UTF-8"/>
</ruleset>
